                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>


                                <TableView fx:id="tablaLibrosmodificar" layoutX="24.0" layoutY="43.0" prefHeight="270.0" prefWidth="292.0" styleClass="table-view">

