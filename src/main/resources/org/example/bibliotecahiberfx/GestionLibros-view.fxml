<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionLibros.Controladores.GestionLibrosController">
    <children>

        <Label fx:id="subtitulo" layoutX="229.0" layoutY="14.0" prefHeight="55.0" prefWidth="441.0" text="GESTION LIBROS">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button layoutX="785.0" layoutY="527.0" mnemonicParsing="false" onAction="#volver" prefHeight="39.0" prefWidth="85.0" styleClass="button1" text="VOLVER" />

        <TabPane layoutX="55.0" layoutY="77.0" prefHeight="446.0" prefWidth="789.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Añadir">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <Label layoutX="183.0" layoutY="30.0" text="Título:" />
                                <TextField fx:id="txtTitulo" layoutX="245.0" layoutY="26.0" prefWidth="300.0" />

                                <Label fx:id="lblMensaje" layoutX="263.0" layoutY="257.0" prefHeight="45.0" prefWidth="262.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: green; -fx-font-family: 'Segoe UI', sans-serif;  -fx-padding: 10px;" text="" />

                                <Label layoutX="183.0" layoutY="79.0" text="Autor:" />
                                <ListView fx:id="ListaAutoresparaLibro" layoutX="245.0" layoutY="79.0" prefHeight="120.0" prefWidth="300.0" />

                                <Label layoutX="185.0" layoutY="221.0" text="Editorial:" />
                                <TextField fx:id="txtEditorial" layoutX="245.0" layoutY="217.0" prefWidth="300.0" />

                                <Label layoutX="187.0" layoutY="263.0" text="Año:" />
                                <TextField fx:id="txtFechaPublicacion" layoutX="245.0" layoutY="259.0" prefWidth="300.0" />

                                <Label layoutX="185.0" layoutY="301.0" text="ISBN:" />
                                <TextField fx:id="txtISBN" layoutX="245.0" layoutY="297.0" prefWidth="300.0" />

                                <Button layoutX="349.0" layoutY="344.0" mnemonicParsing="false" onAction="#guardarLibro" prefHeight="46.0" prefWidth="92.0" text="Guardar" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Modificar">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <ListView fx:id="listLibros" layoutX="44.0" layoutY="39.0" prefHeight="200.0" prefWidth="250.0" />

                                <Label layoutX="364.0" layoutY="43.0" text="Título:" />
                                <TextField fx:id="txtTituloMod" layoutX="420.0" layoutY="39.0" prefWidth="250.0" />

                                <Label layoutX="364.0" layoutY="101.0" text="Autor:" />
                                <ListView layoutX="420.0" layoutY="90.0" prefHeight="40.0" prefWidth="250.0" />

                                <Label layoutX="357.0" layoutY="159.0" text="Editorial:" />
                                <TextField fx:id="txtEditorialMod" layoutX="420.0" layoutY="155.0" prefWidth="250.0" />

                                <Label layoutX="368.0" layoutY="211.0" text="Año:" />
                                <TextField fx:id="txtAnioMod" layoutX="420.0" layoutY="207.0" prefWidth="250.0" />

                                <Label layoutX="366.0" layoutY="265.0" text="ISBN:" />
                                <TextField fx:id="txtISBNMod" layoutX="420.0" layoutY="261.0" prefWidth="250.0" />

                                <Button fx:id="btnGuardarMod" layoutX="347.0" layoutY="340.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="95.0" text="Guardar " />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Eliminar">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <TableView fx:id="tablaLibrosEliminar" layoutX="5.0" layoutY="42.0" prefHeight="270.0" prefWidth="780.0">
                                    <columns>
                                        <TableColumn fx:id="colTitulo" prefWidth="200.0" text="Título" />
                                        <TableColumn fx:id="colAutor" prefWidth="150.0" text="Autor" />
                                        <TableColumn fx:id="colEditorial" prefWidth="150.0" text="Editorial" />
                                        <TableColumn fx:id="colAnio" prefWidth="100.0" text="Año" />
                                        <TableColumn fx:id="colISBN" prefWidth="180.0" text="ISBN" />
                                    </columns>
                                </TableView>
                                <Button fx:id="btnEliminar" layoutX="350.0" layoutY="340.0" mnemonicParsing="false" onAction="#eliminarLibro" prefHeight="50.0" prefWidth="100.0" text="Eliminar" />
                            </children>

                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Buscar">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="258.0">
                            <children>
                                <fx:define><ToggleGroup fx:id="groupBuscar" /></fx:define>
                                <HBox alignment="BASELINE_CENTER" layoutX="232.0" layoutY="46.0" prefHeight="16.0" prefWidth="265.0" spacing="10">
                                    <Label text="Buscar por:" />
                                    <RadioButton fx:id="checkTitulo" text="Título" />
                                    <RadioButton fx:id="checkAutor" text="Autor" />
                                    <RadioButton fx:id="checkISBN" text="ISBN" />
                                </HBox>

                                <Label layoutX="158.0" layoutY="101.0" text="Término:" />
                                <TextField fx:id="txtBuscar" layoutX="240.0" layoutY="97.0" prefWidth="250.0" />

                                <Button fx:id="btnBuscar" layoutX="519.0" layoutY="93.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="86.0" text="Buscar" />

                                <ListView fx:id="listResultados" layoutX="155.0" layoutY="165.0" prefHeight="150.0" prefWidth="450.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Listado">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <Label layoutX="126.0" layoutY="41.0" text="Libros Disponibles" />
                                <Label layoutX="528.0" layoutY="41.0" text="Libros Prestados" />

                                <ListView fx:id="listLibrosDisponibles" layoutX="49.0" layoutY="75.0" prefHeight="306.0" prefWidth="250.0" />

                                <ListView fx:id="listLibrosPrestados" layoutX="447.0" layoutY="73.0" prefHeight="309.0" prefWidth="250.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
