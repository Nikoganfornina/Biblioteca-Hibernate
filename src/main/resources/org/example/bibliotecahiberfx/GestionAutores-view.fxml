        <Label fx:id="subtitulo" layoutX="250.0" layoutY="20.0" prefHeight="55.0" prefWidth="400.0" text="GESTIÓN DE AUTORES" />
        <!-- Botón Salir -->
        <Button layoutX="785.0" layoutY="527.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="85.0" onAction="#volver" styleClass="button1" text="VOLVER" />

        <!-- TabPane -->
        <TabPane layoutX="55.0" layoutY="77.0" prefHeight="446.0" prefWidth="789.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
