                <Tab text="Añadir">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <Label layoutX="196.0" layoutY="130.0" text="Nombre:" />
                                <TextField layoutX="333.0" layoutY="126.0" prefWidth="200.0" />

                                <Label layoutX="184.0" layoutY="187.0" text="Nacionalidad:" />
                                <TextField layoutX="333.0" layoutY="183.0" prefWidth="200.0" />

                                <Button layoutX="333.0" layoutY="330.0" mnemonicParsing="false" prefHeight="64.0" prefWidth="124.0" text="Guardar" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Tab Modificar -->
                <Tab text="Modificar">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <ListView fx:id="listAutores" layoutX="20.0" layoutY="20.0" prefHeight="200.0" prefWidth="200.0" />

                                <Label layoutX="297.0" layoutY="78.0" text="Nombre:" />
                                <TextField fx:id="txtNombreMod" layoutX="420.0" layoutY="74.0" prefWidth="200.0" />

                                <Label layoutX="285.0" layoutY="150.0" text="Nacionalidad:" />
                                <TextField fx:id="txtNacionalidadMod" layoutX="420.0" layoutY="146.0" prefWidth="200.0" />

                                <Button fx:id="btnGuardarMod" layoutX="337.0" layoutY="337.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="114.0" text="Guardar" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Tab Eliminar -->
                <Tab text="Eliminar">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <ListView fx:id="listAutoresEliminar" layoutX="244.0" layoutY="70.0" prefHeight="200.0" prefWidth="300.0" />

                                <Button fx:id="btnEliminar" layoutX="360.0" layoutY="319.0" mnemonicParsing="false" text="Eliminar" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Tab Buscar -->
                <Tab text="Buscar">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>

                                <Label layoutX="180.0" layoutY="103.0" text="Nombre" />
                                <TextField fx:id="txtBuscar" layoutX="240.0" layoutY="99.0" prefWidth="220.0" />

                                <Button fx:id="btnBuscar" layoutX="514.0" layoutY="97.0" mnemonicParsing="false" text="Buscar" />

                                <ListView fx:id="listResultados" layoutX="180.0" layoutY="139.0" prefHeight="220.0" prefWidth="400.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Tab Listado -->
                <Tab text="Listado">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="287.0" prefWidth="558.0">
                            <children>
                                <Label layoutX="374.0" layoutY="92.0" text="Autores" />


                                <ListView fx:id="listAutores" layoutX="295.0" layoutY="141.0" prefHeight="200.0" prefWidth="200.0" />

                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
